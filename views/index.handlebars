<div class="row">
    <div class="col-md-5">
        <h2 id="available-burgers" class="text-center">Available Burgers</h2>

        <ul class="list-group">
            {{#each burgers}}
            {{#unless devoured}}
            <li class="list-group-item list-group-item-warning d-flex justify-content-between">{{burger_name}}<button
                    data-devoured="{{this.devoured}}" data-id="{{this.id}}" class="btn btn-warning eat">Devour It!</button></li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="col-md-2"></div>

    <div class="col-md-5">
        <h2 id="devoured-burgers" class="text-center">Devoured Burgers</h2>

        <ul class="list-group">
            {{#each burgers}}
            {{#if devoured}}
            <li class="list-group-item list-group-item-secondary d-flex justify-content-between">{{burger_name}}<button
                    data-devoured="{{this.devoured}}" data-id="{{this.id}}" class="btn btn-success eat">Eat It Again?</button></li>
            {{/if}}
            {{/each}}
        </ul>

    </div>
</div>
<div id="add-burger-row" class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">

        <h2>Add a Burger</h2>
        <form class="create-form">
            <div class="form-group">
                {{!-- <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Burger Name: </span>
                    </div> --}}
                    {{!-- <label for="burger-name">Burger Name:</label> --}}
                    <input class="form-control" type="text" id="burger-name" name="burger-name">
                {{!-- </div> --}}
            </div>

            <button type="submit" class="btn btn-lg btn-secondary">Add Burger</button>
        </form>
    </div>
    <div class="col-md-2"></div>
</div>

</div>